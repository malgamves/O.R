<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".about"
    android:weightSum="1">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="171dp"
        app:srcCompat="@drawable/wait2"
        android:id="@+id/imageView" />

    <TextView
        android:text="Disclaimer : \n We're not responsible for any actual damage this inflicts on  your life. "
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView2"
        android:textAlignment="center"
        android:textSize="24sp"
        android:fontFamily="sans-serif-smallcaps"
        android:textColor="@color/colorPrimary" />

    <TextView
        android:text="use at your own risk"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView3"
        android:fontFamily="sans-serif-smallcaps"
        android:textSize="24sp"
        android:textStyle="normal|bold"
        android:textAlignment="center"
        android:textColor="@color/colorPrimary" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="112dp"
        android:baselineAligned="false"
        android:layout_marginTop="80dp">

        <ImageView
            android:layout_width="181dp"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/zambia"
            android:id="@+id/imageView4" />

        <TextView
            android:text="Proudly Zambian"
            android:layout_width="wrap_content"
            android:layout_height="54dp"
            android:id="@+id/textView6"
            android:textAlignment="viewStart"
            android:textSize="24sp"
            android:textColor="@color/colorPrimary"
            android:fontFamily="sans-serif-smallcaps"
            android:layout_marginTop="50dp" />
    </LinearLayout>
</LinearLayout>